@model CarSharing_Angajati.Models.Employees


@{
    ViewData["Title"] = "Employees";
}



<div class="row">
    <div class="col-md-4 offset-md-4"> 
        <h2>New Employee</h2>
        <form asp-action="AddorEdit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmpId"/>
            
            <div class="form-group">
                
                <label asp-for="EmpName" class="control-label"></label>
                <input asp-for="EmpName" class="form-control" />
                <span asp-validation-for="EmpName" class="text-danger"></span>
        
            </div>
            
            <div class="form-group">
                <label asp-for="EmpBirthDate" class="control-label"></label>
                @Html.TextBoxFor(model => model.EmpBirthDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>

         
           <div class="row mt-1">
               <div class="col-md-6">
                <div class="form-group">
                <label asp-for="EmpIDNP" class="control-label"></label>
                <input asp-for="EmpIDNP" class="form-control" type="text" inputmode="numeric"/>
                <span asp-validation-for="EmpIDNP" class="text-danger"></span>
                </div>
            </div>
      
                <div class="col-md-6">
                    <div class="form-gorup">
                        <label asp-for="EmpPhoneNumber" class="control-label" style="color:gray"></label>
                            <input asp-for="EmpPhoneNumber" class="form-control" type="tel" inputmode="numeric" id="phone" />
                            <span asp-validation-for="EmpPhoneNumber" class="text-danger"></span>
                        </div>
                    </div>               
            </div>
                
            
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                    @Html.RadioButtonFor(model => model.Gender, "Male", new { @checked = true }) Male 
                    @Html.RadioButtonFor(model => model.Gender, "Female", new { @checked = true }) Female
                <span asp-validation-for="Gender" class="text-danger"></span>
                   
            </div>
          
           <div class="row mt-1">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EmpEmail" class="control-label"></label>
                        <input asp-for="EmpEmail" class="form-control" />
                        <span asp-validation-for="EmpEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                      <div class="form-group">
                        <label asp-for="EmpAdress" class="control-label"></label>
                        <input asp-for="EmpAdress" class="form-control" />
                        <span asp-validation-for="EmpAdress" class="text-danger"></span>
                      </div>
                </div>
           </div>

         <div class="row mt-1">
               <div class="col-md-6">
                  <div class="form-group">
                     <label asp-for="EmpDriverLicense" class="control-label"></label>
                     <input asp-for="EmpDriverLicense" class="form-control" />
                     <span asp-validation-for="EmpDriverLicense" class="text-danger"></span>
                  </div>
               </div>

           <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EmpPosition" class="control-label"></label>
                    <input asp-for="EmpPosition" class="form-control" />
                    <span asp-validation-for="EmpPosition" class="text-danger"></span>
                 </div>
            </div>
         </div>

          <div class="row mt-2">
            <div class="col-md-6">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>              
             </div>
             <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary w-100">View all Employees</a>
                </div>
           </div>
        </form>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}